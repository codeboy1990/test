<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">  

<struts>    
     <constant name="struts.i18n.encoding" value="UTF-8"/>  
            <!-- 指定默认编码集 ，作用于HttpServletRequest的setCharacterEncoding（）和freemarker，vilocity的输出 -->  
    <constant name="struts.configuration.xmlreload" value="true"/>  
            <!-- 当struts配置文件修改时是否自动加载 -->  
    <constant name="struts.devMode" value="true"/>  
            <!-- 开发模式下打印详细的错误信息 -->  
    <constant name="struts.ui.theme" value="xhtml"/>  
      
   <package name="user" namespace="/" extends="struts-default">  
        <action name="addU" class="com.admin.action.UserAction" method="addU">  
            <result name="userAdd">/userAdd.jsp</result>  
        </action>
        <action name="add"  class="com.admin.action.UserAction" method="add">
        	<result name="success">/success.jsp</result>
        </action>
    </package>    
</struts>