<?xml version="1.0" encoding="UTF-8"?>
<mapper namespace="com.admin.dto.User">  
      
    <resultMap type="com.admin.dto.User" id="userResult">  
        <result property="id" column="id" jdbcType="INTEGER" javaType="java.lang.Integer" />  
        <result property="username" column="username" />  
        <result property="password" column="password" />  
    </resultMap>  
    <select id="userLogin"  parameterType="user" resultMap="userResult">  
        select * from user   
        where   
            username=#{username} and password=#{password}  
    </select>  
  
    <select id="selectAllUser" resultMap="userResult">  
        select * from user  
    </select>  
  
    <select id="findUserById" parameterType="int" resultMap="userResult">  
        select *  
        from user where id=#{id}  
    </select>  
  
    <insert id="insertUser" parameterType="user">  
     <![CDATA[ 
        insert into 
        user(username,password) values(#{username},#{password}) 
        ]]>  
    </insert>  
  
    <update id="updateUser" parameterType="user">  
        update user set  
        username=#{username},password=#{password} where id=#{id}  
    </update>  
      
    <delete id="deleteUser" parameterType="int">  
        delete from user where  
        id=#{id}  
    </delete>  
  
</mapper> 